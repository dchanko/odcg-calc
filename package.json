{
  "name": "odcg-calc",
  "version": "0.1.0",
  "description": "Objective Diamond Clarity Grading Calculator",
  "repository": {
    "type": "git",
    "url": "git://github.com/dchanko/odcg-calc.git"
  },
  "scripts": {
    "prestart": "babel-node build/startMessage.js",
    "start": "npm-run-all --parallel security-check open:src lint:watch test:watch",
    "open:src": "babel-node build/server.js",
    "lint": "esw webpack.config.*, src, build --color",
    "lint:watch": "npm run lint -- --watch",
    "security-check": "nsp check",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "clean-dist": "rimraf ./dist && mkdir dist",
    "prebuild": "npm-run-all clean-dist test lint",
    "build": "babel-node build/build.js",
    "postbuild": "babel-node build/distServer.js",
    "deploy": "surge ./dist"
  },
  "author": "David Chanko",
  "license": "MIT",
  "dependencies": {
    "immutable": "^3.8.1",
    "react": "15.4.2",
    "react-dom": "15.4.2",
    "react-router": "3.0.2",
    "rxjs": "5.1.0",
    "whatwg-fetch": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.23.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.3.2",
    "babel-preset-env": "^1.1.11",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-register": "^6.23.0",

    "chalk": "1.1.3",
    "cheerio": "0.22.0",
    "compression": "1.6.2",
    "connect-history-api-fallback": "1.3.0",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.2",
    "enzyme": "^2.7.1",
    "eslint": "^3.16.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-watch": "^3.0.0",
    "express": "^4.15.0",
    "extract-text-webpack-plugin": "^2.0.0",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^19.0.2",
    "jsdom": "^9.11.0",
    "json-schema-faker": "^0.4.0",
    "json-server": "^0.9.5",
    "mocha": "^3.2.0",
    "nock": "^9.0.9",
    "npm-run-all": "^4.0.2",
    "nsp": "^2.6.2",
    "numeral": "^2.0.4",
    "open": "^0.0.5",
    "react-addons-test-utils": "^15.4.2",
    "react-test-renderer": "^15.4.2",
    "rimraf": "^2.6.1",
    "surge": "^0.18.0",
    "style-loader": "^0.13.2",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-md5-hash": "^0.0.5"
  },
  "jest": {
    "testRegex": "(.*\\.((react-|)test)\\.js)$",
    "globals": {
      "window": true
    }
  }
}
